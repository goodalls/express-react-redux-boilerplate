{
  "name": "express-react-redux-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^3.5.1",
    "express": "^4.16.3",
    "knex": "^0.14.6",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.3",
    "pg": "^7.4.3",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.0",
    "react-router-dom": "^4.3.0",
    "react-scripts": "1.1.1",
    "redux": "^3.7.2",
    "hoek": "4.2.1"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src/*.js",
    "heroku-postbuild": "npm install --only=dev && npm install && npm run build",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "api": "PORT=3001 nodemon ./server.js",
    "start": "concurrently --kill-others-on-fail \"npm run client\" \"npm run api\"",
    "client": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "test-api": "NODE_ENV=test mocha --exit ./src/db/test/routes.spec.js",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.9.1",
    "redux-devtools": "^3.4.1"
  }
}
